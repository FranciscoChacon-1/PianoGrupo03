<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondos"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Acerca de Nosotros"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="106dp"
            app:srcCompat="@drawable/diego" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/bona_nova"
            android:gravity="center"
            android:text="Diego Alejandro Burgos Servellón"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="128dp"
            android:layout_height="109dp"
            app:srcCompat="@drawable/francisco" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:fontFamily="@font/bona_nova"
            android:gravity="center"
            android:text="Francisco Eduardo Chacón Estrada"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="128dp"
            android:layout_height="156dp"
            app:srcCompat="@drawable/jose" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/bona_nova"
            android:gravity="center"
            android:text="Manzanares Larin Jose Carlos"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>