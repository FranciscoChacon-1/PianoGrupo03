<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearL"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/fondo3"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Layout para la imagen y botón del Bajo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bajo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/bass"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/bajo"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón de la Guitarra -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_guitarra"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/guitarra"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/guitarra"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón del Tambor -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tambor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/tambor"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/tambor"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón de los Bongos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bongos"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/bongos"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/bongos"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón del Piano -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_piano"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/piano"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/piano"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón de la Tuba -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tuba"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/tuba"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/tuba"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón de la Trompeta -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_trompeta"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/trompeta"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/trompeta"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <!-- Layout para la imagen y botón del Xilófono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_xilofono"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/xilofono"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/xilofono"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="0dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
